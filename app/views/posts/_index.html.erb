<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>単語</th>
      <th>意味</th>
      <th>コメント数</th>
      <th>いいね数</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td></td>
        <td><%= link_to post_path(post) do %><%= post.name %><% end %></td>
        <td><%= post.body %></td>
        <td><%= post.post_comments.count %></td>
        <td><%= post.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>