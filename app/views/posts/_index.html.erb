<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>単語</th>
      <th>意味</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
        </td>
        <td><%= link_to post_path(post) do %><%= post.name %><% end %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>