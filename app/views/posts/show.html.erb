<div class='row'>
  <div class="mx-auto" style="width:80%">
   <div class="postbox">
     <div class="container-post">
       <div class="container-text">
      <p>単語(word)<br><%= @post.name %></p>
      <% if @post.user_id == current_user.id %>
      <%= link_to '編集 Edit', edit_post_path(@post), class: "btn btn-outline-light rounded-pill" %>&nbsp;
      <%= link_to '削除する Delete', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}" %>
      <% else %>
        <div id="favorite-btn_<%= @post.id %>">
          <%= render 'favorites/favorite', post: @post %>
        </div>
      <% end %>
      </div>
        <div class="container-text">
      <p>意味(explanation)<br><%= @post.body %></p>
         </div>
         <div class="container-text">
          <%= link_to user_path(@post.user) do %><%= attachment_image_tag(@post.user, :image, :fill, 80, 80, fallback: "no_image.jpg") %><% end %><br><br>
          Shared by <%= link_to user_path(@post.user) do %><%= @post.user.last_name_kana %><%= @post.user.first_name_kana %><% end %>
        </div>
</div>
 <div class="field"><span style="font-size:15px; text-center"><br><h4>コメント件数：<%= @post.post_comments.count %></h4></span></div>
 <div class="comment">
 <% @post.post_comments.each do |post_comment| %>
   <span style="font-size:15px; text-center"><p><%= attachment_image_tag(post_comment.user, :image, :fill, 60, 60, fallback: "no_image.jpg") %>
   <%= post_comment.user.last_name_kana %><%= post_comment.user.first_name_kana %>
   <%= post_comment.created_at.strftime('%Y/%m/%d') %><br><%= post_comment.comment %></span></p>
   <% if post_comment.user == current_user %>
   <%= link_to "自分のコメントを削除", post_post_comment_path(post_comment.post, post_comment),class: "btn btn-outline-danger btn-sm", remote: true, method: :delete %>
   <% end %>
 <% end %>
 </div>
 <div class="comment-post">
 <%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
   <%= f.text_area :comment, rows:'2',placeholder: "コメントをここに", size: "30x2" %><br>
   <%= f.submit "送信する", class: 'btn btn-outline-light btn-sm rounded-pill' %>
 <% end %>
</div>
</div>
</div>
</div>
</div>

