<%= form_with model: Post.new, local:true do |f| %>
  <%= f.label :言葉 %>
  <%= f.text_field :name, class: 'form-control post_name' %>
  <%= f.label :意味・説明 %>
  <%= f.text_area :body, class: 'form-control post_body' %><br>
  <%= f.submit "Share!", class: 'btn btn-outline-light btn-lg rounded-pill' %>
<% end %><br>