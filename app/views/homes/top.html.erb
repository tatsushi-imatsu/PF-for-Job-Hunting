<script src="//cdn.jsdelivr.net/gh/mntn-dev/t.js/t.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<!--タイピングjs <p id="hoge">で使いたいviewページにタグで囲うことで適用可能。-->
 <div class='row'>
  <div class="picture" style="width:100%">
   <div class="field">
     <div class="mx-auto" style="width:50% ">
      <div class="box">
        <p id="hoge">
          <span style="font-size:45px;">Word Share!</span><br>
          <span style="font-size:20px;">〜 Words Sharing Community 〜</span><br>
           <span style="font-size:15px;">
            <br><span style="font-size:25px;">W</span>ords tweeting 言葉をつぶやいた後<br>
            <span style="font-size:25px;">S</span>haring with words 共有することで<br>
            <span style="font-size:25px;">C</span>ommunication 交流しましょう！!
           </span>
        </p>
           <div class="space">
            <div class="owl-carousel">
              <% @posts.each do |post| %>
               <div class="product-box">
                <table>
                  <tr>
                    <th>
                      <span style="font-size:20px; text-center">
                       <%= post.name %>
                      </span>
                    </th>
                  </tr>
                 </table>
               </div>
              <% end %>
            </div>
            <%= javascript_tag do %>
            $("#hoge").t()
            $(".owl-carousel").owlCarousel();
            <% end %>
            <!--クラス名"owl-carousel"の閉じdiv直後に設定するjs-->
           </div>
      </div>
     </div>
    </div>
   </div>
  </div>
