<div class='row'>
 <div class="mx-auto" style="width:70%">
  <p class="text-center">
    <span style="font-size:30px;">
      <%= @user.last_name_kana+@user.first_name_kana %>&nbsp;詳細情報
    </span><br>
      <%= link_to "編集する", edit_admins_user_path(@user), class: "btn btn-success" %>
      <%= link_to 'ユーザ情報を削除する', admins_user_path(@user), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_user_#{@user.id}"%>
  </p><br>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>名前</th>
      <th>ふりがな</th>
      <th>プロフィール画像</th>
      <th>紹介文</th>
      <th>ステータス</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <td><%= @user.last_name+@user.first_name %></td>
      <td><%= @user.last_name_kana+@user.first_name_kana %></td>
      <td><%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
      <td><%= @user.introduction %></td>
      <td><% if @user.is_deleted == false %>
          <span style="color: green">有効</span>
          <% else %>
          <span style="color: gray">退会済み</span>
          <% end %>
      </td>
      <td><%= @user.followings.count %></td>
      <td><%= @user.followers.count %></td>
     </tr>
    </tbody>
   </table>
    <p class="text-center">
      <span style="font-size:25px">
       <%= @user.last_name_kana+@user.first_name_kana %>&nbsp;の投稿した&nbsp;words
      </span>
    </p>
    <p class="text-center">
      <%= paginate @posts %>
    </p>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th></th>
        <th>単語</th>
        <th>コメント数</th>
        <th>いいね数</th>
       </tr>
      </thead>
      <tbody>
       <% @posts.each do |post| %>
        <tr>
         <td></td>
         <td><%= link_to admins_post_path(post) do %><%= post.name %><% end %></td>
         <td><%= post.post_comments.count %></td>
         <td><%= post.favorites.count %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>
</div>