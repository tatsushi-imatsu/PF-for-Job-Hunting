<h2>Users search for <%= @range %></h2>
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to admins_user_path(user) do %><%= user.last_name_kana %><%= user.first_name_kana %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to admins_post_path(post) do %><%= post.name %><% end %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>