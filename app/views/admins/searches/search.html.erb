<div class='row'>
 <div class="mx-auto" style="width:70%">
  <p class="text-center">
    <span style="font-size:30px;">
      <%= @range %>の検索結果
    </span>
  </p>
  <table class="table table-hover table-inverse">
   <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
         <td><%= link_to admins_user_path(user) do %><%= user.last_name_kana %><%= user.first_name_kana %><% end %></td>
        </tr>
      <% end %>
    </tbody>
    <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
         <td><%= link_to admins_post_path(post) do %><%= post.name %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
  </table>
 </div>
</div>