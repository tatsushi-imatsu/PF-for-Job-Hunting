<h2>posts index</h2>

<br><table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>投稿日時</th>
      <th>単語</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to admins_post_path(post) do %><%= post.name %><% end %></td>
      <td><%= post.body %></td>
    </tr>
    <% end %>
  </tbody>
 </table>