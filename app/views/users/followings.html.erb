<h2>　Follower Users </h2>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user_path(user) do %><%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_image.jpg") %><% end %></td>
        <td><%= user.last_name_kana %><%= user.first_name_kana %></td>
        <td>フォロー数 <%= user.followings.count %></td>
        <td>フォロワー数 <%= user.followers.count %></td>
         <td><%= link_to 'チャットする', chat_path(@user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>