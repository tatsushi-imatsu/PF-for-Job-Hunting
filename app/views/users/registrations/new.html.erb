 <div class='row'>
   <div class="picture" style="width:100%">
    <div class="mx-auto" style="width:70%">
      <div class="box"><br>
      <div class="field"><span style="font-size:20px; text-center">新規会員登録</span></div><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :姓 %>
    <%= f.text_field :last_name, autofocus: true, placeholder: 'last name' %>

    <%= f.label :　名 %>
    <%= f.text_field :first_name, autofocus: true, placeholder: 'first name' %>
  </div>

  <div class="field">
    <br><%= f.label :ローマ字（半角）姓 %>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: 'Fill in English' %>

    <%= f.label :名 %>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: 'Fill in English' %>
  </div>

  <br><div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', size: 40 %>
  </div>

 <br><div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', size: 30 %>
  </div>

  <br><div class="field">
    <%= f.label :パスワード確認 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password confirmation', size: 30  %>
  </div>

  <br><div class="actions">
    <%= f.submit "Join!", class: "btn btn-outline-light btn-lg rounded-pill" %>
    <%= render "users/shared/links" %>
  </div>
<% end %>
<br>
   </div>
  </div>
 </div>
</div>