 <h2>会員情報編集 </h2>
   <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
  <%= form_with model: @user, local:true do |f| %>

    <div class="field">
    <%= f.label :名前　姓 %>
    <%= f.text_field :last_name, autofocus: true, placeholder: 'last name' %>

    <%= f.label :　名 %>
    <%= f.text_field :first_name, autofocus: true, placeholder: 'first name' %>
  </div>

  <div class="field">
    <%= f.label :ローマ字（半角）姓 %>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: 'Fill in English' %>

    <%= f.label :名 %>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: 'Fill in English' %>
  </div>

  <div class="field">
     <%= f.label :紹介文 %><br />
     <%= f.text_field :introduction, autofocus: true, placeholder: 'Introduction' %>
  </div>

  <div class="field">
      <%= f.label :プロフィール画像 %>
      <%= f.attachment_field :image, class: "form-control-file user_image" %>
  </div>

  <div class="actions">
     <%= f.submit "保存" %>
  </div>
  <% end %>