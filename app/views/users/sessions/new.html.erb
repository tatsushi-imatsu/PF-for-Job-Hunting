
 <div class='row'>
   <div class="picture" style="width:100%">
    <div class="mx-auto" style="width:70%">
      <div class="box"><br>
<div class="field"><span style="font-size:20px; text-center">ログイン</span></div>

<div class="field"><span style="font-size:20px; text-center">会員の方はこちらから</span></div><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email' %>
  </div>

  <br><div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶する %>
    </div>
  <% end %>

  <br><div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-light btn-lg rounded-pill" %>
  </div>
<% end %>
<div class="actions">
<%= render "users/shared/links" %>
</div>
<br>
  </div>
 </div>
</div>
</div>
