<h2>Users search for <%= @range %></h2>
<table class="table table-hover table-inverse">
  <% @range = "Post" %>
    <thead>
     <tr>
      <th>単語</th>
      <th>コメント数</th>
      <th>いいね数</th>
     </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post_path(post) do %><%= post.name %><% end %></td>
          <td><%= post.post_comments.count %></td>
          <td><%= post.favorites.count %></td>
        </tr>
      <% end %>
    </tbody>
</table>