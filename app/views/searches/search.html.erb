<div class='row'>
  <div class="picture" style="width:100%">
    <div class="mx-auto" style="width:80%">
      <div class="box"><br>
        <div class="col-lg-12">
          <h3 class="text-center">
            検索結果 ＜<%= @range %>＞
          </h3>
            <%= paginate @posts %><br>
             <% @posts.each do |post| %>
              <% @range = "Post" %>
               <div class="product-box"><br>
                 <table>
                   <tr>
                     <th>
                       <span style="font-size:30px; text-center">
                         <%= link_to post_path(post) do %>
                         <%= post.name %>
                         <% end %>
                       </span>
                     </th>
                   </tr>
                   <tr>
                     <th>
                       <span style="font-size:15px">
                         コメント数<%= post.post_comments.count %>
                       </span>
                     </th>
                   </tr>
                   <tr>
                     <th>
                       <span style="font-size:15px">
                         いいね数<%= post.favorites.count %>
                       </span>
                     </th>
                   </tr>
                 </table>
               </div>
             <% end %>
        </div>
      </div>
    </div>
  </div>
</div>