<div class='row'>
   <div class="picture" style="width:100%">
    <div class="mx-auto" style="width:70%">
      <div class="box"><br>
       <div class="col-lg-12">
<h3 class="text-center">フォローしているユーザー 〜Your following〜 </h3>
<%= paginate @users %><br>
<% @users.each do |user| %>
<div class="product-box">
<table>
      <tr>
        <th><div class="field"><%= link_to user_path(user) do %><%= attachment_image_tag(user, :image, :fill, 65, 65, fallback: "no_image.jpg") %><% end %></div></th>
      </tr>
      <tr>
        <th><div class="field"><%= user.last_name_kana %><%= user.first_name_kana %></div></th>
      </tr>
      <tr>
         <th><%= link_to 'CHAT', chat_path(@user.id), class: 'btn btn-outline-warning rounded-pill' %></th>
      </tr>
</table>
</div>
<% end %>
</div>
</div>
  </div>
 </div>
</div>